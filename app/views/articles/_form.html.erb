<div class ="container">


  <div class ="row justify-content-center">
    <div class ="col-10" >
     <%= render 'Shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>
      <div class="form-group row">
            <%= f.label :title , class:"col-2 col-form-label" %><br/>
            <div class = "col-10">
            <%= f.text_field :title , class:"form-control", placeholder: "Title of article"%>
          </div>
        </div>

          <div class="form-group row" >
            <%= f.label :description, class:"col-2 col-form-label"%><br/>
                <div class = "col-10">
            <%= f.text_area :description, rows:10, class:"form-control", placeholder: "Description of article" %>
          </div>
          </div>

          <div class="form-group row" >
            <%= f.label :category, class:"col-2 col-form-label"%><br/>
            <div class = "col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            {prompt: "<Choose your categories>"}, {multiple:true, class: "custom-select"}) %>
            </div>
          </div>

          <div class = "form-group row justify-content-center">
            <%= f.submit class: "btn btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-white"%>
  </div>
</div>