<h1 class= "text-center mt-4 text-white"> Categories  </h1>

<div class="container apple_pagination">
 <%= will_paginate @posts, :container => false %>
 <% @categories.each do |category| %>
 <div class = "row justify-content-md-center mt-4">
 <div class ="col-4 mt-4">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_path(category),class: "text-dark" %></h5>
        <%=pluralize(category.articles.count,"article")%>

      </div>
      <div class="card-footer text-muted">
        <small> Created at <%= time_ago_in_words(category.created_at)%> ago,
         edited at <%= time_ago_in_words(category.updated_at) %> ago </small>
      </div>
    </div>
    </div>
  </div>
<% end %>
</div>

<div class="apple_pagination">
    <%= will_paginate @posts, :container => false %>
  </div>