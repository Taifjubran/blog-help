   <%= render 'Shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>
      <div class="form-group row">
            <%= f.label :name , "Category name",class:"col-2 col-form-label" %><br/>
            <div class = "col-10">
            <%= f.text_field :name , class:"form-control", placeholder: "Enter Category name"%>
          </div>
        </div>
          <div class = "form-group row justify-content-center">
            <%= f.submit class: "btn btn-lg" %>
        </div>
      <% end %>