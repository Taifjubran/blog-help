<h1 class= "text-center mt-4 text-white"> Bloggers  </h1>
<div class="container">
  <div class="apple_pagination">
    <%= will_paginate @users, :container => false %>
  </div>
  <% @users.each do |user| %>
 <div class = "row justify-content-md-center mt-4">
 <div class ="col-8 mt-4">
    <div class="card text-center">
      <div class="card-header">
        <%= link_to user.username , user_path(user) %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
        <%= link_to gravatar_for(user, size:150), user %>
        </h5>
        <p class="card-text">
        <%=pluralize(user.articles.count,"article")%>
        </p>
        <%= link_to 'Show Profile', user, class:"btn btn-outline-primary btn-sm"%>
        <% if logged_in?%>
          <% if user==current_user%>
            <%= link_to 'Edit Prfoile', edit_user_path(user),class:"btn btn-outline-secondary btn-sm" %>
          <% end %>
          <% if current_user.admin?%>
            <%= link_to 'Delete User', user_path(user), class:"btn btn-outline-danger btn-sm", method: :delete,  data: {confirm: "Are you sure?"} %>
          <% end %>
          <%end%>
      </div>
      <div class="card-footer text-muted">
        <small> Joined at <%= time_ago_in_words(user.created_at)%> ago </small>
      </div>
    </div>
    </div>
  </div>
<% end %>
</div>

<div class="apple_pagination">
    <%= will_paginate @users, :container => false %>
  </div>




